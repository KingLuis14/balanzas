---
import LayoutWrapper from "@/components/LayoutWrapper.astro";
import SectionPage from "@/components/SectionPage.astro";
import DataBeneficios from "@/data/Beneficios.ts";
import { Icon } from "astro-icon/components";


---

<SectionPage classUtilities="bg-color-primary-100">
    <LayoutWrapper>
        <header class="textFlow text-center padding-section-bottom">
            <h2 class="title-2">!Queremos darte lo mejorÂ¡
            </h2>
            <p>Conoce algunos de los beneficios que tenemos para ti</p>
        </header>
        
        <div class="grid grid-col:2 @lg:grid-col:4">
        {
            DataBeneficios.map(({ icon, title }, index) => (
                
                    <div class:list={['card-beneficio | text-center padding-b-8 padding-i-4 bg-color-neutral-000 box-shadow--beneficios border-radius-2',
                    {'bg-color-primary-500 color-neutral-000' : index === 2} ]}>
                        <Icon name={icon} size={50} {...(index === 2 ? {color: "var(--neutral-000)"} : {color: "var(--primary-500)"})}/>
                        {title.split(" ").length === 3 ? (
                            <p>
                                {`${title.split(" ")[0]} ${title.split(" ")[1]}`}
                                <span style="display: block">{`${title.split(" ")[2]}`}</span>
                            </p>
                        ) : (
                            <p>
                                {`${title.split(" ")[0]}`}
                                <span style="display: block">{`${title.split(" ")[1]}`}</span>
                            </p>
                        )}
                    </div>
                
            ))
        }
        </div>
    </LayoutWrapper>
</SectionPage>


<style lang="scss">
    .card-beneficio{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        
    }
</style>