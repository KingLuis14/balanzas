---
import CardBeneficie from "@/components/CardBeneficie.astro";
---

<section class="section-page">
  <div class="wrapper container">
    <div class="container__content">
      <h2 class="fs-title-1" >Queremos darte lo mejor!</h2>
      <p>
        Conoce algunos de los beneficios que tenemos para ti
      </p>
    </div>
    <div class="container__beneficies">
      <CardBeneficie icon="certificado" text="Certificacion Progresiva" />
      <CardBeneficie icon="clasesVivo" text="Clases en Vivo" />
      <CardBeneficie icon="libro" text="Materiales por Curso" />
      <CardBeneficie icon="plataformaVirtual" text="Plataforma Virtual" />
    </div>
  </div>
</section>

<style lang="scss">
  .container {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 2.5rem;
    padding-bottom: clamp(1rem, 2vw + 0.5rem, 2rem) ;
    // color: white;

    @media (width >= 1200px) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    &__content {
         align-self: center;
         max-width: 45ch;
         --_space: 1rem;

         > p {
            margin-top: 1.25rem;
         }
      }

    &__beneficies {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: clamp(1rem, 2vw + 0.5rem, 2rem);

      & :global(> :nth-child(odd)) {
        position: relative;
        top: clamp(1rem, 2vw + 0.5rem, 2rem);
      }

      & :global(> *) {
        background-color: var(--yellow-green-300);
        color: var(--green-800);
      }

      & :global(> :nth-child(2)),
      :global(> :nth-child(3)) {
        background-color: var(--green-800);
        color: var(--yellow-green-300);
      }

      
    }
  }
</style>
