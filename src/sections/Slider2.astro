---
import SliderItem from "@/components/Slider/Slider-Item.astro";
import SliderList from "@/components/Slider/Slider-List.astro";
import Slider from "@/components/Slider/Slider.astro";
import sliderData from "../data/SliderImg2.ts";
import SliderPrev from "@/components/Slider/Slider-Prev.astro";
import SliderNext from "@/components/Slider/Slider-Next.astro";
import SliderDot from "@/components/Slider/Slider-Dot.astro";
import SliderNavigation from "@/components/Slider/Slider-Navigation.astro";
import { Icon } from "astro-icon/components";
---

<Slider>
    <SliderList autoplay>
        {
            sliderData.map(({ img, alt }, index) => (
                <SliderItem 
                    {...(index === 0 && {'active': true})}
                    data-moveTransition={`-${(index + 1) * 100}%`}
                >
                    {
                        img.map((imagen) => (
                            <img src={`/img/${imagen}`} {alt} style="height: 100%;" />
                        ))
                    }
                </SliderItem>
            ))
        }
    </SliderList>
    <SliderNavigation>
        {
            sliderData.map((_, index) => (
                    <SliderDot
                        {...(index === 0 && {'active': true})}
                        data-moveTransition={`-${(index + 1) * 100}%`}
                    ></SliderDot>
                ))
        }
    </SliderNavigation>
    <SliderPrev>
        <Icon name="ArrowIcon" size={25} />
    </SliderPrev>
    <SliderNext >
        <Icon name="ArrowIcon" size={25} />
    </SliderNext>
</Slider>
