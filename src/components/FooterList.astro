---
interface Props {
    titulo : string;
    styleContent? : string;
    styleTitle? : string;
}

const {titulo,styleTitle,  styleContent, ...rest } = Astro.props;
---


<div>
    <h3 class=`${styleTitle}` {...rest}>{ titulo }</h3>
    <div class=`Content ${styleContent}` {...rest}>
        <slot />
    </div>
    
</div>

<style>
    h3{
        margin-bottom: 1rem;
    }

    .Content{
        display: flex;
        flex-direction: column;
        gap: .4rem;

        color: rgb(210, 210, 210);

    }
</style>