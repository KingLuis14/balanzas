<style lang="scss">
    footer {
        padding-block: 2rem;
        color: white;
    }

    .Footer-Container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        column-gap: 1rem;
        row-gap: 2rem;

        @media (width > 768px) {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .ListaCursos {
        display: flex;
        flex-direction: column;
        gap: 0.4rem;
    }

    .wrapper {
        gap: 2rem;
        > p {
            // padding-block: .5rem;
            text-align: center;
            color: rgb(210, 210, 210);
        }
    }

    .Iconos-Container {
        flex-direction: row;
        gap: 1rem;
        > a {
            color: rgb(210, 210, 210);
        }
    }

    .RedesSociales-Icon{

        transition: transform .2s;

        &:hover{
            transform: scale(1.15);
        }
    }
</style>

<script>
    document.getElementById("date-copyrigth").textContent = new Date().getFullYear().toString();
</script>
