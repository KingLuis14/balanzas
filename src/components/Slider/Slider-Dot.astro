---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
    classUtilities?: string;
    classBlock?: string;
    active?: boolean;
}

const { classBlock, classUtilities, active,  ...attrs } = Astro.props;
---

<button class:list={["slider__dot", classBlock, classUtilities, { active: active }]} {...attrs}>
    <slot />
</button>

<style lang="scss">

@use "../../scss/settings/" as *;
    
    .slider__dot {
        width: 15px;
        aspect-ratio: 1;
        background-color: $color-neutral-000;
        outline: 2px solid $color-neutral-000;
        border-radius: 50%;
        

        &.active {
            background-color: $color-green-500;
            outline: 2px solid $color-green-500;
        }
    }
</style>
